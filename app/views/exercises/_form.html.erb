<%= form_for([@workout, @workout.exercises.build]) do |f| %>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="form-group">
                    <%= f.label :"Name" %><br>
                    <%= f.text_field :name, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :"Set" %><br>
                    <%= f.number_field :set, class: "form-control"  %>
                </div>
                <div class="form-group">
                    <%= f.label :"Reps" %><br>
                    <%= f.number_field :reps, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.submit "Add exercise",class: "btn btn-info" %>
                    <%= link_to 'Back', root_path, class: "btn" %>
                </div>
            </div>
        </div>
    </div>
<% end %>